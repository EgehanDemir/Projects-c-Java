@using Yazlab2Proje3.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model Researcher

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css"/>
    <title>Neo4j</title>
</head>
<body>
    <div class="container">
        <h1 class="h3">Neo4j</h1>
        <div class="row">
            <div class="col-md-8">
                <form asp-controller="Account" asp-action="neo4j" method="GET">
                    <div asp validation-summary = "all" class="text-danger"></div>
                    <div class="input-group md-form form-sm form-2 p1-0">
                        <input name="name" class="from-control my-0 py-1 red-border" type="text" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <span class="input-goup-text red lighten-3" id="basic-text1">
                                <i class = "fas fa-search text-grey" aria-hidden="true">
                                </i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>
    @section scripts{
        <script>
            $(function(){
                $("#basic-text1").click(function(){
                    $("Form").submit()
                })
            })
        </script>
    }
</body>
</html>