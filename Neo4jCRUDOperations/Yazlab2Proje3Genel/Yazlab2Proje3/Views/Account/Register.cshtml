@using Yazlab2Proje3.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model RegisterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css"/>
    <title>Register</title>
</head>
    <body style="background-color: yellow;">
        <partial name="_header"></partial>
        @await Html.PartialAsync("_navbar")
        <main>
            <div class="container">
              <h1 class="h3">Register</h1>
                <div class="row">
                        <div class="col-md-12">
                            <form asp-controller="Account" asp-action="Register" method="POST">
                                <div asp validation-summary = "all" class="text-danger"></div>
                                <div class="from-group row">
                                    <label asp-for="FirstName" class="col-sm-2 col-from-label"></label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="FirstName">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="from-group row">
                                    <label asp-for="LastName" class="col-sm-2 col-from-label"></label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="LastName">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="from-group row">
                                    <label asp-for="UserName" class="col-sm-2 col-from-label"></label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="UserName">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="from-group row">
                                    <label asp-for="Password" class="col-sm-2 col-from-label"></label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="from-group row">
                                    <label asp-for="Repassword" class="col-sm-2 col-from-label"></label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Repassword">
                                        <span asp-validation-for="Repassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="from-group row">
                                    <label asp-for="Email" class="col-sm-2 col-from-label"></label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <div class="col-sm-10 offset-sm-2">
                                        <button type="submit" class="btn btn-primary">Register</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        @section Scripts{
            <script src = "modules/jquery-validation/dist/jquery.validate.min.js"></script>
            <script src = "modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
        }
    </body>
</html>




     
    